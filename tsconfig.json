{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/utils/InstallmentPix.js", "src/app/components/evmCode.js", ".storybook/*.ts", "src/app/components/nextButtons", "src/app/paymentoptions/PaymentModal/PaymentModal.stories.jsx", "src/app/paymentoptions/PaymentModal/PaymentModal.stories.jsx"],
  "exclude": ["node_modules"]
}
